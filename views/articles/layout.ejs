   <div class="form-group">
    <label for="title">Title</label>
    <input required value="<%=article.title %>" type="text"  name="title" id="title" class="form-control">   
    </div>  
    
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control"  name="description" id="description" cols="30" rows="10"><%= article.description%></textarea>
      </div>

      <div class="form-group">
        <label for="markdown">Markdown</label>
        <textarea required class="form-control" name="markdown" id="markdown">
          <%= article.markdown %>
        </textarea>
      </div>



    <a href="/" class="btn btn-secondary mt-4">Cancel</a>
      <div class="form-group">
        <label>Select Blog type</label>
       <input type="radio" value="Public" id="Public" name="blogtype">
       <label id="Public">Public</label>
       <input type="radio" value="Private" id="Private" name="blogtype">
       <label id="Private">Private</label>
      </div>
      <button type="submit" class="btn btn-primary mt-4">Publish Publically</button>
      

  

